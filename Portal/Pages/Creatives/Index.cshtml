@page
@model Lucent.Portal.Models.CreativesModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>creatives</h1>
<form method="post">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col"># Creative</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var creative in Model.Creatives)
            {
                <tr id="@creative.Id">
                    <th scope="row" id="@creative.Id-id">
                        <a asp-page="./Summary" class="btn btn-link" asp-route-id="@creative.Id">@creative.Id</a>
                    </th>
                    <td id="@creative.Id-name">@creative.Name</td>
                    <td id="@creative.Id-num-creative">@creative.Contents.Count()</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-link" asp-route-id="@creative.Id">edit</a>
                        <button type="submit" class="btn btn-link" asp-page-handler="delete" 
                                asp-route-id="@creative.Id">delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-secondary" asp-page="./Create">Create</a>
</form>  
<script src="~/lib/signalr/signalr.min.js"></script>
<script src="~/js/creatives.js"></script>