@page
@using Lucent.Common.Entities
@model Lucent.Portal.Models.CreateCampaignModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<body>
    <form method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Campaign.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Campaign.Name" class="form-control" />
                <span asp-validation-for="Campaign.Name" class="text-danger"></span>
            </div>
        </div>

        <partial name="CampaignSchedule"
         for="Campaign.Schedule" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </div>
    </form>
</body>
</html>